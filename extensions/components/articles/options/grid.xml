<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <toolbar>
        <title>Articles Manager</title>
        <buttons>
            <button>new</button>
            <button>edit</button>
            <button>publish</button>
            <button>feature</button>
            <button>archive</button>
            <button>checkin</button>
            <button>restore</button>
            <button>delete</button>
            <button>trash</button>
            <button>options</button>
        </buttons>
    </toolbar>
    <submenuitems>
        <submenuitem name="items" display="Items" />
        <submenuitem name="categories" display="Categories" />
        <submenuitem name="tags" display="Tags" />
        <submenuitem name="featured" display="Featured" />
        <submenuitem name="drafts"  display="Drafts" />
        <submenuitem name="trash" display="Trash" />
    </submenuitems>
    <filters>
        <filter name="search"/>
        <filter name="author"/>
        <filter name="category"/>
        <filter name="group"/>
        <filter name="language"/>
        <filter name="status"/>
        <filter name="tag"/>
    </filters>
    <columns>
        <column name="title" />
        <column name="status" />
        <column name="featured" />
        <column name="primary_category" />
        <column name="ordering" />
        <column name="view_group_id" />
        <column name="created_by" />
        <column name="start_publishing_datetime" />
        <column name="visits" />
        <column name="language" />
    </columns>
    <paginationoptions>
        <paginationoption name="displayrows" display="1" rows="10"/>
        <paginationoption name="direction-buttons" display="1" />
        <paginationoption name="buttons" display="1" />
    </paginationoptions>
    <batchoptions>
        <batchoption name="display" value="1"/>
    </batchoptions>
</configuration>
