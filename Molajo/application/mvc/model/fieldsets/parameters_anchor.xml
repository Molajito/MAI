<fieldset
        name="link_options"
        label="LINK_OPTIONS_LABEL">

    <field
            name="link_title"
            type="text"
            label="LINK_TITLE_LABEL"
            description="LINK_TITLE_DESC"
            />

    <field
            name="link_css"
            type="text"
            label="LINK_CSS_LABEL"
            description="LINK_CSS_DESC"
            />

    <field
            name="link_image"
            type="media"
            label="LINK_IMAGE_LABEL"
            description="LINK_IMAGE_DESC"
            />

    <field
            name="link_include_text"
            type="radio"
            label="LINK_INCLUDE_TEXT_LABEL"
            description="LINK_INCLUDE_TEXT_DESC"
            default="1"
            filter="integer"
            >
        <option value="0">NO</option>
        <option value="1">YES</option>
    </field>

    <field
            name="link_target"
            type="list"
            label="LINK_TARGET_LABEL"
            description="LINK_TARGET_DESC"
            default="0"
            filter="int"
            class="inputbox"
            >
        <option value="0">LINK_TARGET_PARENT</option>
        <option value="1">LINK_TARGET_NEW_WINDOW</option>
        <option value="2">LINK_TARGET_DIALOG_BOX</option>
    </field>
</fieldset>