<?xml version="1.0" encoding="utf-8"?>
<field>
    <name>view_group</name>
    <components inherits="group"/>
    <processing inherits="group"/>
    <interface inherits="group"/>
    <tables>
        <table name="content"
               pk="id"
               display="title"
               autonum="1"
               asset_type_id="MOLAJO_ASSET_TYPE_GROUP_BEGIN-MOLAJO_ASSET_TYPE_GROUP_END"
                />
        <joins>
            <join name="1">
                <pair name="1"
                      source_table="{{linking}}" source_field="id"
                      to_table="assets" to_field="source_id"
                        />
                <pair name="2"
                      source_table="{{linking}}" source_field="asset_type_id"
                      to_table="assets" to_field="view_group_id"
                        />
                <pair name="3"
                      source_table="assets" source_field="view_group_id"
                      to_table="group_view_groups" to_field="view_group_id"
                        />
                <pair name="4"
                      source_table="group_view_groups" source_field="view_group_id"
                      to_table="content" to_field="id"
                        />
            </join>
        </joins>
    </tables>
</field>
