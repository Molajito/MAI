<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
                name="id"
                type="text"
                class="readonly"
                label="ID_LABEL"
                description="ID_DESC"
                default="0"
                filter="int"
                readonly="true"
                />

        <field
                name="asset_type_id"
                type="hidden"
                filter="unset"
                />

        <field
                name="source_id"
                type="hidden"
                filter="unset"
                />

        <field
                name="title"
                type="text"
                label="TITLE_LABEL"
                description="TITLE_DESC"
                size="40"
                />

        <field
                name="sef_request"
                type="url"
                label="SEF_REQUEST_LABEL"
                description="SEF_REQUEST_DESC"
                size="60"
                />

        <field
                name="request"
                type="url"
                label="REQUEST_LABEL"
                description="REQUEST_DESC"
                size="60"
                />

        <field
                name="primary_category_id"
                type="category"
                description="PRIMARY_CATEGORY_DESC"
                label="PRIMARY_CATEGORY_LABEL"
                show_root="true"
                multiple="true"
                size="10">
            <option value="">ALL_CATEGORIES</option>
        </field>

        <field
                name="language"
                type="language"
                label="LANGUAGE_LABEL"
                description="LANGUAGE_DESC"
                class="inputbox">
            <option value="*">ALL</option>
        </field>

        <field
                name="ordering"
                type="ordering"
                label="ORDERING_LABEL"
                description="ORDERING_DESC"
                filter="int"
                class="inputbox"
                />

    </fieldset>

    <fields name="custom_fields">
    </fields>

    <fields name="parameters">
    </fields>

    <fields name="assets">

        <field
                name="path"
                type="hidden"
                filter="unset"
                />

        <field
                name="groups"
                type="viewaccess"
                class="inputbox"
                label="ACCESS_LABEL"
                description="ACCESS_DESC"
                multiple="true"
                size="5">
            <option value="">ALL_GROUPS</option>
        </field>

        <field
                name="theme_id"
                type="theme"
                label="THEME_LABEL"
                description="THEME_DESC"
                filter="int"
                class="inputbox">
            <option value="0">JOPTION_USE_DEFAULT</option>
        </field>

    </fields>

</form>
