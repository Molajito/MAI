<model
        name="ArticlesList"
        table="#__extension_instances"
        primary_key="id"
        primary_prefix="a"
        get_customfields="1"
        get_item_children="0"
        use_special_joins="1"
        check_view_level_access="1"
        check_published="1"
        data_source="JDatabase">
    <table>
        <item>
            <fields>
                <include name="ExtensionFields"/>
            </fields>
            <joins>
                <include name="ExtensionInstancesJoins"/>
            </joins>
            <foreignkeys>
                <include name="ExtensionForeignkeys"/>
            </foreignkeys>
            <children>
                <include name="ExtensionChildren"/>
            </children>
            <triggers>
                <include name="ExtensionTriggers"/>
            </triggers>
            <customfields>
                <customfield name="customfields">
                    <field name="example_of_article_only_field" type="int" null="1" default="1"/>
                </customfield>
                <customfield name="metadata">
                    <include name="SystemMetadata"/>
                </customfield>
                <customfield name="parameters">
                    <include name="ParametersItem"/>
                    <include name="ParametersList"/>
                </customfield>
            </customfields>
        </item>
    </table>
</model>

