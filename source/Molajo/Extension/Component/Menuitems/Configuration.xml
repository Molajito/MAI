    <author_url>http://molajo.org</author_url>
    <version>1.0</version>
    <description>COMPONENT_MENUITEMS_DESCRIPTION</description>
    <model
            name="Menuitems"
            catalog_type_id="2000"
            table="#__content"
            primary_key="id"
            name_key="title"
            primary_prefix="a"
            get_customfields="1"
            get_item_children="0"
            use_special_joins="1"
            check_view_level_access="1"
            process_triggers="1"
            data_source="JDatabase">
        <table>
            <include name="TableContent"/>
        </table>
        <customfields>
            <customfield name="customfields">
                <include name="CustomfieldsContent"/>
                <field name="example_of_content_only_field" type="int" null="1" default="1"/>
            </customfield>
            <customfield name="metadata">
                <include name="Metadata"/>
            </customfield>
            <customfield name="parameters">
                <include name="ParametersCustomfieldsContent"/>
            </customfield>
        </customfields>
    </model>
</extension>
