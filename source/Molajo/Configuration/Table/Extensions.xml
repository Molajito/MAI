<?xml version="1.0" encoding="utf-8"?>
<model
        name="Extensions"
        table="#__extensions"
        primary_key="id"
        name_key="name"
        primary_prefix="a"
        get_customfields="0"
        get_item_children="0"
        use_special_joins="1"
        check_view_level_access="1"
        process_triggers="0"
        data_source="JDatabase">
    <table>
        <fields>
            <field name="id" type="int" null="0" default=""/>
            <field name="extension_site_id" type="int" null="0" default=""/>
            <field name="catalog_type_id" type="int" null="0" default=""/>
            <field name="name" type="char" null="0" default=""/>
        </fields>
        <foreignkeys>
            <foreignkey name="extension_site_id" source_id="id" source_model="Site" required="1"/>
            <foreignkey name="catalog_type_id" source_id="id" source_model="Site" required="1"/>
        </foreignkeys>
        <children>
            <child name="ExtensionInstances" join="extension_id"/>
        </children>
        <join>
            <join model="CatalogTypes"
                  alias="catalog_types"
                  select="title"
                  jointo="id"
                  joinwith="catalog_type_id"/>
            <join model="ExtensionInstances"
                  alias="extension_instances"
                  select="id,title,catalog_type_id"
                  jointo="id"
                  joinwith="extension_instance_id"/>
            <join model="ApplicationExtensionInstances"
                  alias="application_extension_instances"
                  select=""
                  jointo="extension_instance_id,application_id"
                  joinwith="extension_instance_id,APPLICATION_ID"/>
            <join model="SiteExtensionInstances"
                  alias="site_extension_instances"
                  select=""
                  jointo="extension_instance_id,site_id"
                  joinwith="extension_instance_id,SITE_ID"/>
        </join>
    </table>
</model>

