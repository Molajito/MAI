<?xml version="1.0" encoding="utf-8"?>
<model
        name="Content"
        table="#__content"
        primary_key="id"
        primary_prefix="a"
        data_source="JDatabase">
    <filters include="ContentFilters"/>
    <foreignkeys include="ContentForeignkeys"/>
    <children include="ContentChildren"/>
    <triggers include="ContentTriggers"/>
    <content>
        <fields>
            <field name="custom_fields" registry="ContentCustomfields">
                <field name="custom_fields">
                    <element name="intro_image" file="" filter="image" shape="" size=""/>
                    <element name="body_image" file="" filter="image" shape="" size=""/>
                </field>
            </field>
            <field name="metadata" registry="ContentMetadata">
                <element include="SystemMetadata"/>
            </field>
            <field name="parameters" registry="ContentParameters">
                <element include="SystemContentParameters"/>
            </field>
        </fields>
    </content>
    <component>
        <fields>
            <field name="parameters" registry="ComponentParameters">
                <element include="SystemComponentParameters"/>
            </field>
        </fields>
    </component>
</model>
