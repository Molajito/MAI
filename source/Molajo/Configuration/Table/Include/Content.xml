<table>
    <item>
        <fields>
            <field include="ContentFields"/>
        </fields>
        <foreignkeys>
            <foreignkey include="ContentForeignkeys"/>
        </foreignkeys>
        <children>
            <child include="ContentChildren"/>
        </children>
        <triggers>
            <trigger include="ContentTriggers"/>
        </triggers>
        <customfields>
            <customfield name="custom_fields" registry="ItemCustomfields">
                <field include="ContentCustomfields"/>
                <field name="example_of_content_only_field" type="int" null="1" default="1"/>
            </customfield>
            <customfield name="metadata" registry="ItemMetadata">
                <field include="SystemMetadata"/>
            </customfield>
            <customfield name="parameters" registry="ItemParameters">
                <field include="SystemItemParameters"/>
            </customfield>
        </customfields>
    </item>
    <component>
        <customfields>
            <customfield name="parameters" registry="ComponentParameters">
                <field include="SystemComponentParameters"/>
            </customfield>
        </customfields>
    </component>
</table>
