<?xml version="1.0" encoding="utf-8"?>
<model
        name="CreatedbyListbox"
        table="#__content"
        primary_key="id"
        name_key="title"
        primary_prefix="a"
        get_customfields="0"
        get_item_children="0"
        use_special_joins="1"
        check_view_level_access="0"
        process_triggers="0"
        filter_catalog_type_id="10000"
        filter_check_published_status="1"
        data_source="JDatabase">
    <table>
        <item>
            <fields>
                <field name="created_by" type="int" null="1" default="0" identity="1"/>
            </fields>
            <joins>
                <join table="#__users"
                      alias="users"
                      select="username"
                      jointo="id"
                      joinwith="created_by"/>
            </joins>
        </item>
    </table>
</model>
