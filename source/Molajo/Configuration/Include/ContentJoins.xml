<join table="#__catalog_types"
      alias="catalog_types"
      select="title"
      jointo="id"
      joinwith="catalog_type_id"/>
<join table="#__extension_instances"
      alias="extension_instances"
      select="id,title,catalog_type_id"
      jointo="id"
      joinwith="extension_instance_id"/>
<join table="#__extensions"
      alias="extensions"
      select="id,name"
      jointo="id"
      joinwith="extension_instances.extension_id"/>
<join table="#__catalog"
      alias="catalog"
      select="id,view_group_id"
      jointo="source_id,catalog_type_id"
      joinwith="id,catalog_type_id"/>
