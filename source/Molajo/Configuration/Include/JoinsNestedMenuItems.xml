<join table="#__content"
      alias="current_menuitem"
      select=""
      jointo="lft,rgt"
      joinwith="&gt;=lft,&lt;=rgt"/>
<join table="#__catalog"
      alias="catalog"
      select="id,sef_request"
      jointo="source_id,catalog_type_id"
      joinwith="id,catalog_type_id"/>
<join table="#__catalog_types"
      alias="catalog_types"
      select="title"
      jointo="id"
      joinwith="catalog_type_id"/>
<join table="#__extension_instances"
      alias="extension_instances"
      select="id,title,catalog_type_id"
      jointo="id"
      joinwith="extension_instance_id"/>
<join table="#__extensions"
      alias="extensions"
      select="id,name"
      jointo="id"
      joinwith="extension_instances.extension_id"/>
<join table="#__application_extension_instances"
      alias="application_extension_instances"
      select=""
      jointo="extension_instance_id,application_id"
      joinwith="extension_instance_id,APPLICATION_ID"/>
<join table="#__site_extension_instances"
      alias="site_extension_instances"
      select=""
      jointo="extension_instance_id,site_id"
      joinwith="extension_instance_id,SITE_ID"/>
