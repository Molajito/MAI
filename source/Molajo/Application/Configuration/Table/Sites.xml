<?xml version="1.0" encoding="utf-8"?>
<model name="Sites" table="#__sites" primary_key="id">
    <filters>
        <filter name="id" filter="int" null="1" default="0"/>
        <filter name="catalog_type_id" filter="int" null="0" default="500" values="500"/>
        <filter name="name" filter="char" null="0" default="" unique="1"/>
        <filter name="path" filter="char" null="0" default=""/>
        <filter name="base_url" filter="url" null="0" default=""/>
        <filter name="description" filter="text" null="1" default=""/>
        <filter name="custom_fields" filter="" null="1" default=""/>
        <filter name="parameters" filter="" null="1" default=""/>
        <filter name="metadata" filter="" null="1" default=""/>
    </filters>
    <triggers>
        <trigger name="Customfields"  />
        <trigger name="Metadata"  />
        <trigger name="Parameters"  />
        <trigger name="Sites"  />
    </triggers>
    <fks>
        <fk name="catalog_type_id" source_id="id" source_model="MolajoCatalogTypes" required="1" />
    </fks>
    <parameters>
        <parameter name="porch_light" filter="boolean" null="1" default="0" values="0,1"/>
    </parameters>
    <custom_fields>
        <custom_field name="custom_field1" filter="char" null="0" default="Molajo Site"/>
    </custom_fields>
    <metadata>
        <meta name="metadata_title" filter="char" null="0" default=""/>
        <meta name="metadata_description" filter="text" null="0" default=""/>
        <meta name="metadata_keywords" filter="char" null="1" default=""/>
        <meta name="metadata_robots" filter="char" null="0" default="follow,index"
              values="follow,nofollow,index,noindex"/>
        <meta name="metadata_author" filter="char" null="1" default=""/>
        <meta name="metadata_content_rights" filter="char" null="1" default=""/>
    </metadata>
</model>

